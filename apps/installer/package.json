{
  "name": "installer",
  "version": "98.0.1998",
  "description": "A nostalgic Windows 98 installer experience for PostHog 3000",
  "main": "dist-electron/main/index.js",
  "author": "PostHog Community",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "build:mac": "pnpm run build && electron-builder --mac",
    "build:win": "pnpm run build && electron-builder --win",
    "build:linux": "pnpm run build && electron-builder --linux",
    "build:all": "pnpm run build && electron-builder -mwl"
  },
  "dependencies": {
    "98.css": "^0.1.20"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "electron": "^39.2.6",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.10"
  },
  "build": {
    "appId": "com.posthog.installer3000",
    "productName": "PostHog 3000 Demo Setup",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron",
      "dist"
    ],
    "extraResources": [
      {
        "from": "resources/icon.png",
        "to": "icon.png"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "resources/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "PostHog 3000 Demo Setup",
      "backgroundColor": "#ffffff",
      "window": {
        "width": 400,
        "height": 300
      },
      "contents": [
        {
          "x": 200,
          "y": 125,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
